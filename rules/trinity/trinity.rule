LEFT = LEFT + SINGLE

rule trinity:
    input:
        #unpack(get_trimmed)
        left=LEFT,
        right=RIGHT
    output:
        fasta = join(ASSEMBLY_DIR,"trinity_out_dir/Trinity.fasta")
